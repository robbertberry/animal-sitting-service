<div class="flex" style="justify-content: center;">
  <div class='form-width content-start gap-4 items-end'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'block font-bold mr-5 text-sm text-gray-900' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mr-5 input-field' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'block font-bold mr-5 text-sm text-gray-900' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'mr-5 input-field' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn-primary mt-5 w-full' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>